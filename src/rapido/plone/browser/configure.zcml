<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="rapido.plone">

    <browser:page
        name="rapido"
        for="*"
        permission="zope2.View"
        class=".views.RapidoView"
        />

    <browser:page
        name="rapido-call"
        for="*"
        permission="zope2.View"
        class=".call.RapidoCall"
        />

    <browser:page
        name="rapido-store-api"
        for="*"
        permission="zope2.View"
        class=".store.RapidoStoreAPI"
        />

    <browser:resource
        name="rapido.js"
        file="rapido.js" />

</configure>
